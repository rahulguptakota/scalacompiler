section .data
message db "Register = %d", 10, 0
formatin: db "%d", 0
a TIMES 100 DW  0
c TIMES 100 DW  0
b TIMES 100 DW  0

section .text
	global main
extern printf
extern scanf

main:
call func_1_main
mov  eax, 1
int  0x80

func_1_scana:
push ebp
mov ebp, esp
sub esp, 12
mov edx, 0
mov ecx, 0
mov ebx, 0
mov [-12 + ebp], ebx
mov [-8 + ebp], ecx
mov [-4 + ebp], edx
mov esp, ebp
pop ebp
ret

func_1_main:
push ebp
mov ebp, esp
sub esp, 0
mov  eax, 4
push eax
call func_1_scana
mov esp, ebp
pop ebp
ret
